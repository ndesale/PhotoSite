<!DOCTYPE html>
<html>
<head>
  <style>
    table#center {
      text-align: center;
      margin: 0 auto;
    }
    th, td {
      width: 150px;
      text-align: center;
      border: 1px solid black;
      padding: 5px
    }
    body{
      background-color: dimgrey;
    }
  </style>
</head>
<body>
<h1 align="center">Current Users</h1>
<table id="center">
  <tr>
    <td>ID</td>
    <td>First_Name</td>
    <td>Last_Name</td>
  </tr>
  <% for student in @students %>
    <tr>
      <td><a href= "/photos/index/<%= student.id %>" ><%= student.id %></a></td>
      <td><a href= "/photos/index/<%= student.id %>" ><%= student.first_name %></a></td>
      <td><a href= "/photos/index/<%= student.id %>" ><%= student.last_name %></a></td>
    </tr>
  <% end %>
</table>
</body>
</html>